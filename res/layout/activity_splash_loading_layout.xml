<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/metallic" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block_logo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Loading..."
            android:textColor="@android:color/white"
            android:textSize="@dimen/block_text_loading" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutInit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/textView_B"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_blue"
            android:gravity="center"
            android:text="B"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_L"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_red"
            android:gravity="center"
            android:text="L"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_O"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_green"
            android:gravity="center"
            android:text="O"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_C"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_yellow"
            android:gravity="center"
            android:text="C"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_K"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_pink"
            android:gravity="center"
            android:text="K"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_M"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_purple"
            android:gravity="center"
            android:text="M"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_copyrright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="4dp"
        android:text="@string/copyright_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/block_width"
        android:layout_height="@dimen/block_height"
        android:layout_gravity="bottom|right"
        android:layout_margin="40dp"
        android:src="@drawable/home_single_block1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/block_width"
        android:layout_height="@dimen/block_height"
        android:layout_gravity="bottom|left"
        android:layout_margin="30dp"
        android:src="@drawable/home_single_block2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/block_width"
        android:layout_height="@dimen/block_height"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="35dp"
        android:src="@drawable/home_single_block2" />

</FrameLayout>