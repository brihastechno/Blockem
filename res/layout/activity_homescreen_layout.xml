<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/metallic" >

    <LinearLayout
        android:id="@+id/linearLayoutInit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- Logo or any other Image display at home screen -->

        <view
            xmlns:coverflow="http://schemas.android.com/apk/res/com.blockem.tetris"
            android:id="@+id/coverflow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            class="com.blockem.tetris.CoverFlow"
            coverflow:imageHeight="@dimen/image_height"
            coverflow:imageWidth="@dimen/image_width"
            coverflow:withReflection="false" >
        </view>

        <!-- Button for start new game -->


        <!-- <Button -->
        <!-- android:id="@+id/button_start_game" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_margin="10dp" -->
        <!-- android:text="@string/button_start_text" /> -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutInit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/textView_B"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_blue"
            android:gravity="center"
            android:text="B"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_L"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_red"
            android:gravity="center"
            android:text="L"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_O"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_green"
            android:gravity="center"
            android:text="O"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_C"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_yellow"
            android:gravity="center"
            android:text="C"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_K"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_pink"
            android:gravity="center"
            android:text="K"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_M"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:background="@drawable/block_purple"
            android:gravity="center"
            android:text="M"
            android:textColor="@android:color/black"
            android:textSize="@dimen/block_text_sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/block_width"
        android:layout_height="@dimen/block_height"
        android:layout_gravity="left|bottom"
        android:layout_margin="10dp"
        android:src="@drawable/icon_setting" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_sound" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/block_width"
            android:layout_height="@dimen/block_height"
            android:src="@drawable/icon_music" />
    </LinearLayout>

</FrameLayout>